<section class="bg-dark" style="opacity: 100%;">
  <div class="container" style="opacity: 80%;">
    <div class="col-md d-flex justify-content-center">
      <div
        class="card text-white bg-dark mb-3"
        style="width: 28rem; height:27rem;"
      >
        <div
          class="card-header"
          style="text-align: center; font-size:20px;"
        ><strong>Enlightened</strong></div>
        <div class="card-body">
          <h5 class="card-title" style="text-align: center;"><strong>
              Login
            </strong>
          <br>
          <% if (full != 'undefined') { %>
            <strong>
              Successfully registered
            </strong>
          <%}%>
          </h5>
          <%- include("./partials/errormsg") %>

          <form action="/logina" id="form" method="post">
            <div class="col-md">
              <div class="mb-2">
                <label for="email" class="form-label">
                  <strong>Email</strong></label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="username"
                  aria-describedby="emailError"
                  placeholder="mfano: yosia@gmail.com"
                  required
                />
                <div id="emailError" class="form-text"><strong></strong></div>
              </div>
            </div>
            <div class="mb-2">
              <label for="passwordone" class="form-label">
                <strong>Password</strong></label>
              <input
                type="password"
                class="form-control"
                id="passwordone"
                name="password"
                aria-describedby="errorPwd"
                minlength="7"
                maxlength="12"
                required
              />
              <div id="errorPwd" class="form-text"><strong></strong></div>
            </div>
            <div class="col-md d-flex justify-content-center">
              <button
                type="submit"
                class="btn btn-lg btn-primary text-white"
              ><strong>Login</strong></button>
            </div>
          </form>
          <div class="col-md g-2">
            <div class="col-md d-flex justify-content-start">
              <a href="/register"><strong>Create an account?</strong></a>
            </div>
            <div class="col-md text-white d-flex justify-content-end">
              <p>
                <a href="/dash"><st rong>forgot password?</strong></a>
              </p>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</section>


